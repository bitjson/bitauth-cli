{
  "name": "bitauth-cli",
  "description": "universal identity and message authentication",
  "version": "0.0.0",
  "bin": {
    "bitauth": "./bin/run"
  },
  "bugs": "https://github.com/bitauth/bitauth-cli/issues",
  "dependencies": {
    "@bitauth/libauth": "^1.16.0",
    "@oclif/command": "^1.7.0",
    "@oclif/config": "^1.16.0",
    "@oclif/plugin-autocomplete": "^0.2.0",
    "@oclif/plugin-help": "^3.1.0",
    "@oclif/plugin-not-found": "^1.2.4",
    "@oclif/plugin-update": "^1.3.10",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "ansi-colors": "^4.1.1",
    "enquirer": "^2.3.6",
    "fast-glob": "^3.2.4",
    "fs-extra": "^9.0.1",
    "pino": "^6.4.1",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1.2.6",
    "@types/chai": "^4.2.12",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/pino": "^6.3.0",
    "chai": "^4",
    "cspell": "^4.0.63",
    "eslint": "^7.5.0",
    "eslint-config-bitauth": "^2.0.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-tsdoc": "^0.2.6",
    "globby": "^11.0.1",
    "mocha": "^8.1.0",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/bitauth/bitauth-cli",
  "keywords": [
    "authentication",
    "identity",
    "sign",
    "verify",
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "CLI",
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "bitauth",
    "plugins": [
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-update",
      "@oclif/plugin-not-found"
    ]
  },
  "repository": "bitauth/bitauth-cli",
  "scripts": {
    "fix": "yarn fix:tslint && yarn fix:prettier",
    "fix:prettier": "prettier --write \"{src,test}/**/*.{json,ts}\"",
    "fix:tslint": "eslint . --ext .ts --fix",
    "log": "yarn log:base -c -l -t",
    "log:base": "tail -f ${BITAUTH_DATA_DIR/#\\~/$HOME}/logs--sensitive-do-not-share.ndjson | pino-pretty",
    "log:debug": "yarn log --search 'level >= `20`'",
    "log:info": "yarn log --search 'level >= `30`'",
    "log:warn": "yarn log --search 'level >= `40`'",
    "pack": "oclif-dev pack",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && yarn readme",
    "readme": "oclif-dev readme && prettier --write README.md",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:lint": "eslint . --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "posttest": "yarn test:spelling && yarn test:lint && yarn test:prettier",
    "version": "yarn readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "prettier": {
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
